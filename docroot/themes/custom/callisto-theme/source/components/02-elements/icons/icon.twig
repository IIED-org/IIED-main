#}

{#
Purge whitelist:
w-48
h-48
w-128
h-128
#}

{# set default size here #}
{% if size %}
  {% set size = 'h-' ~ size ~ ' w-' ~ size %}
{% elseif not size %}
  {% set size = 'h-12 w-12' %}
{% endif %}

{% if width and height %}
  {% set size = 'h-' ~ height ~ ' w-' ~ width %}
{% endif %}

{# Directory is a variable provided by drupal #}
{% if directory is not defined %}
  {# Add logic if this is needs to work in a pattern library #}
{% endif %}

{# The assets_path variable is defined in callisto_theme.theme:14 #}
<svg class="{{ size }} fill-current">
  <use xlink:href="{{ assets_path }}/icons/svg-sprite-symbols.svg#{{ icon_id }}"></use>
</svg>
