{#
/**
 * same as basic text with added sticky classes
 Could be recreated with extend
 */
#}
{%
  set classes = [
    'paragraph',
    'prose', 
    'xl:sticky',
    'py-6',
    'z-20', 
    'top-0', 
    'md:prose-lg',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      {{ content }}
    {% endblock %}
  </div>
{% endblock paragraph %}
