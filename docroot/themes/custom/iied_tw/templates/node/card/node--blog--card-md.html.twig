{% extends '@iied_tw/node/card/node--card-md.html.twig' %}

   {% block label %}
      <div class="absolute bottom-0 left-0 z-10 px-4 pt-2 pb-5 text-gray-900 bg-iiedblue-500 rounded-tr-xl">
         {% if node.field_alternative_label is not empty %}
         {{ node.field_alternative_label.0.value|striptags }}
         {% else %}
         Insight
         {% endif %}
      </div>
   {% endblock %}


    {% block date %}
    <div class="text-gray-500"> 
    {{ node.field_author_s_[0].entity|view('name_only') }}
      {% if node.field_author_s_[1] %}
        {{ ' and ' }}{{ node.field_author_s_[1].entity|view('name_only') }}
      {% endif %}

    <br/>{{ node.getCreatedTime|date('d F Y') }}
    </div>
    {% endblock %}

