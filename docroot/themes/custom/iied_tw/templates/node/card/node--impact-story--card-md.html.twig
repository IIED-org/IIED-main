{#
For long read featured card display
#}

{# odd #}

<article{{ attributes.addClass('h-full') }}>

        <a href="{{ url }}" class="hover:no-underline">
          <div
            class="flex flex-col h-full overflow-hidden transition-shadow bg-gray-800 border border-gray-300 rounded-xl hover:shadow-lg group"
          >
            <div class="border-b-4 border-iiedgreen-500">

              {% set image_uri = node.field_main_image|file_uri %}
              {% set image_alt = node.field_main_image.entity.field_media_image.alt %}
              {% if image_uri is not null %}
                <img class="w-full" src="{{ image_uri|image_style('sm_16x9') }}" alt="{{ image_alt }}" />
              {% endif %}

            </div>

            <div class="flex flex-col justify-between h-full p-4">
              <h4 class="mb-4 text-xl leading-relaxed text-white lg:text-2xl">
                {{ label }}
              </h4>

                            <div
                class="-mr-4 border-b text-iiedgreen-500 border-iiedgreen-500"
              >
               <span>{{ node.type.entity.label() }}</span>&nbsp;
            {% block date %}
              <span class="text-gray-300"> {{ node.field_read_length.value }}</span>
              {% endblock %}

              </div>


            </div>
          </div>
        </a>

</article>


