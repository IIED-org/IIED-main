
{#
For external resource card display
#}

<article{{ attributes.addClass('h-full') }}>
        <a href="{{ content.field_link[0]['#url'] }}" target="_blank" class="hover:no-underline">
          <div
            class="flex flex-col h-full overflow-hidden transition-shadow bg-white border border-gray-300 rounded-xl hover:shadow-lg group"
          >
              <div
                class="flex justify-between px-4 pt-2 pb-5 text-gray-500"
              >
               {{ node.source.0.value }}

                <div>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25" />
                  </svg>
                </div>
              </div>

            <div class="relative z-20 flex flex-col justify-between h-full p-4 -mt-3 bg-iiedbg-10 rounded-odd-even">

              <div>
                <h4 class="mb-4 text-xl leading-relaxed text-gray-900 lg:text-2xl">
                  {{ label }}
                </h4>
                <p class="text-gray-700">{{ node.field_tagline.0.value }}</p>
              </div>
              
              <p class="text-gray-500"> {{ node.resource_type.0.value|lower|capitalize }}</p>
             
            </div>

          </div>
        </a>
</article>