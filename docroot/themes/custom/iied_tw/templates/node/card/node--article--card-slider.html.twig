{#
Card for use in a slider only
#}

<div class="h-full overflow-hidden snap-center shrink-0">
  <article{{ attributes.addClass('h-full') }}>

    <a href="{{ url }}" class="hover:no-underline">
      <div class="flex flex-col content-start h-full overflow-hidden transition-shadow bg-white border border-gray-300 hover:shadow-md grow group rounded-xl">
      
        {# image #}
          {% block image %}
              {% set image_uri = node.field_main_image|file_uri %}
              {% set image_alt = node.field_main_image.entity.field_media_image.alt %}
            {% if image_uri is not null %}
              <img class="object-cover" src="{{ image_uri|image_style('card_256') }}" alt="{{ image_alt }}" />
            {% endif %}
          {% endblock %}
        
          <div class="flex flex-col p-4">
            <h5 class="mb-4 text-gray-900 sm:text-xl sm:leading-relaxed">
                {{ label }}
            </h5>
          
          {% block label %}
                {% if node.field_alternative_label is not empty %}
                <p class="text-gray-500">{{ node.field_alternative_label.0.value|striptags }}</p>
                {% else %}
                <p class="text-gray-500">{{ node.type.entity.label() }}</p>
                {% endif %}

          {% endblock %}
          </div>

      </div>
    </a>

  </article>
</div>
      
