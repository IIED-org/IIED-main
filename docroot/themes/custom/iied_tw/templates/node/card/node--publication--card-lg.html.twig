{#
For general featured card display
#}
{% if (node.field_short_title.value) %}
	{% set title_text = node.field_short_title.value %}
{% else %}
	{% set title_text = node.label %}
{% endif %}
<article{{attributes.addClass('h-full')}}>

	<a href="{{ url }}" class="hover:no-underline">
		<div class="group grow card rounded-xl hover:shadow-lg hover:brightness-95 relative flex content-start h-full overflow-hidden transition bg-white border border-gray-300">
			<span class="bg-gradient-to-r from-iiedgreen-300 to-iiedblue-500 absolute inset-x-0 bottom-0 h-2"></span>

			<div class="max-h-44 md:max-h-56 lg:max-h-96 w-3/12 p-2">
				<div class="w-fit sm:w-fit sm:-rotate-3 group-hover:-rotate-2 group-hover:scale-110 m-auto transition duration-300 ease-out shadow-lg">
          {% include '@iied_tw/partials/_publication_image.html.twig' with { 'display_mode':'embedded', 'img_style':'card_370', 'alt_text': title_text|striptags  } %}
				</div>

				<div class="flex flex-col justify-between w-9/12 h-full p-4">
					<div>
						<h4 class="lg:text-2xl mb-4 text-lg text-gray-900">
							{{ label }}
						</h4>
						{#<p class="mb-4 text-gray-700"> short description could go here </p> #}
					</div>
					<p class="text-gray-500">{{ node.field_date_published.value|date('d F Y') }}</p>
				</div>
			</div>
		</a>

	</article>
