{#
For general solo card display
Minor mod of pub card md where sm: has been replaced with lg:
#}

<article{{attributes.addClass('h-full')}}>

	<a href="{{ url }}" class="hover:no-underline">
		<div class="lg:flex-col grow group rounded-xl hover:shadow-lg lg:flex-wrap flex content-start h-full overflow-hidden transition-shadow bg-white border border-gray-300">
			<div class="lg:overflow-hidden lg:bg-gray-300 lg:w-full max-h-44 2xl:max-h-56 w-3/12 p-2">
				<div
					class="w-fit lg:w-fit lg:-rotate-3 group-hover:-rotate-2 group-hover:scale-110 m-auto transition duration-300 ease-out shadow-lg">
					{# TODO fix card image displays #}
					{% include '@iied_tw/partials/_publication_image.html.twig' with { 'display_mode':'card_cover', 'img_style':'card_cover' } %}
				</div>
			</div>

			<div class="lg:w-full grow lg:border-t-2 border-iiedgreen-500 flex flex-col justify-between w-9/12 p-4">

				<h4 class="mb-4 text-xl leading-relaxed text-gray-900">
					{% if node.field_short_title.value %}
						{{ node.field_short_title.value }}
					{% else %}
						{{ label }}
					{% endif %}
				</h4>
				<p class="text-gray-500">{{ node.field_date_published.value|date('F Y') }}</p>
			</div>
		</div>
	</a>

</article>
