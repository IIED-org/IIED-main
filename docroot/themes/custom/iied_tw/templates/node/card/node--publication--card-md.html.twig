{#
For general featured card display
#}

<article{{attributes.addClass('h-full')}}>

	<a href="{{ url }}" class="hover:no-underline">
		<div class="sm:flex-col grow group rounded-xl hover:shadow-lg sm:flex-wrap flex content-start h-full overflow-hidden transition-shadow bg-white border border-gray-300">
			<div class="sm:overflow-hidden sm:bg-gray-300 sm:w-full max-h-44 2xl:max-h-56 w-3/12 p-2">

				<div
					class="w-fit sm:w-fit sm:-rotate-3 group-hover:-rotate-2 group-hover:scale-110 m-auto transition duration-300 ease-out shadow-lg">
					{# img #}
					{% include '@iied_tw/partials/_publication_image.html.twig' with { 'display_mode':'card_cover', 'img_style':'card_cover' } %}
				</div>


			</div>

			<div class="sm:w-full grow sm:border-t-2 color-rotate flex flex-col justify-between w-9/12 p-4">

				<h4 class="lg:text-2xl mb-4 text-xl leading-relaxed text-gray-900">
					{% if node.field_short_title.value %}
						{{ node.field_short_title.value }}
					{% else %}
						{{ label }}
					{% endif %}
				</h4>
				<p class="text-gray-500">{{ node.field_date_published.value|date('d F Y') }}</p>
			</div>
		</div>
	</a>

</article>
