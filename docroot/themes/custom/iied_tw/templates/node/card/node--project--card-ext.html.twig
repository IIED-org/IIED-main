
<article{{ attributes.addClass('h-full') }}>

        <a href="{{ url }}" class="hover:no-underline">
          <div
            class="flex h-full overflow-hidden transition-shadow bg-white border border-gray-300 rounded-xl group hover:shadow-md grow"
          >
      
            {% block image %}
                        {% set image_uri = node.field_main_image|file_uri %}
                        {% set image_alt = node.field_main_image.entity.field_media_image.alt %}
            {% if image_uri is not null %}
              <img class="object-cover w-3/12 h-auto" src="{{ image_uri|image_style('card_370') }}" alt="{{ image_alt }}" />
            {% endif %}
            {% endblock %}

          
            <div class="flex flex-col justify-between w-9/12 p-4">
                <div class="mb-4">
                    <h3 class="mb-4 text-xl text-gray-900 lg:text-2xl">
                        {{ label }}
                    </h3>

                    <p class="prose max-w-none">
                    {{ content.field_tagline.0 }}
                    </p>
                </div>
                <p class="text-gray-500">
                {{ node.type.entity.label() }}
                </p>

            </div>
          </div>
        </a>

</article>


