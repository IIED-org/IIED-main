{#
/**
 * @file
 * Theme override to display a two-column grid layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 * - first
 */
#}
{% if content %}
  <div{{ attributes }}>
         <div class="container mx-auto">
      {% if content.first %}
        <div {{ region_attributes.first.addClass('sm:grid', 'grid-flow-row-dense', 'gap-6', 'xl:gap-10', 'sm:grid-cols-2') }}>
          {{ content.insert_before }}
          {{ content.controls }}
          {{ content.first }}
          {{ content.insert_after }}
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}