{#
/**
 * @file
 * Theme override to display a two-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 * - first
 * - second
 * - third
 * - fourth
 */
#}
{% if content %}
  <div{{ attributes }}>
         <div class="container mx-auto my-12 bg-slate-100 lg:grid lg:gap-x-6 md:max-w-3xl lg:max-w-screen-lg xl:max-w-screen-xl 2xl:max-w-screen-2xl lg:grid-cols-12">
      {% if content.first %}
        <div {{ region_attributes.first.addClass('layout__region', 'layout__region--first', 'lg:col-span-6', 'xl:col-span-3') }}>
          {{ content.insert_before }}
          {{ content.controls }}
          {{ content.first }}
          {{ content.insert_after }}
        </div>
      {% endif %}

      {% if content.second %}
        <div {{ region_attributes.second.addClass('layout__region', 'layout__region--second', 'lg:col-span-6', 'xl:col-span-3') }}>
          {{ content.insert_before }}
          {{ content.controls }}
          {{ content.second }}
          {{ content.insert_after }}
        </div>
      {% endif %}

      {% if content.third %}
        <div {{ region_attributes.second.addClass('layout__region', 'layout__region--third', 'lg:col-span-6', 'xl:col-span-3') }}>
          {{ content.insert_before }}
          {{ content.controls }}
          {{ content.third }}
          {{ content.insert_after }}
        </div>
      {% endif %}

      {% if content.fourth %}
        <div {{ region_attributes.second.addClass('layout__region', 'layout__region--fourth', 'lg:col-span-6', 'xl:col-span-3') }}>
          {{ content.insert_before }}
          {{ content.controls }}
          {{ content.fourth }}
          {{ content.insert_after }}
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}