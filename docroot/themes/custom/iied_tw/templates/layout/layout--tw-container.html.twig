{#
/**
 * @file
 * Theme override to display a single column container layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 * - first
 */
#}
{% if content %}
  <div{{ attributes }}>
      {% if content.first %}
        <div {{ region_attributes.first.addClass('container') }}>
          {{ content.insert_before }}
          {{ content.controls }}
          {{ content.first }}
          {{ content.insert_after }}
        </div>
      {% endif %}
  </div>
{% endif %}