
{#
Standard person card
#}

<article{{ attributes.addClass('h-full') }}>

        <a href="{{ url }}" class="hover:no-underline group">
          <div
            class="relative flex transition bg-white border border-gray-300 min-h-[12rem] h-full rounded-xl group-hover:shadow-lg"
          >
            <div class="flex flex-col items-center w-full h-full p-4 text-center">
              {% if content.field_author_picture[0] is not empty %}
                <div class="m-4">
                  <img 
                  src="{{ term.field_author_picture.entity.field_media_image.0.entity.uri.value|image_style('medium') }}"
                  alt="{{ term.name.value }}'s picture"
                  class="flex-shrink-0 object-cover w-24 h-24 mb-3 border-2 border-white rounded-full sm:mx-4 ring-1 ring-iiedblue-500 group-hover:shadow-lg"
                  />
                </div>
              {% endif %}

                  <h3 class="mb-4 text-xl text-gray-900 lg:text-2xl">{{ content.field_name }}</h3>
                {% if content.field_position[0] is not empty %}
                  <p class="pb-6 text-gray-700">{{ content.field_position|render|striptags }}</p>
                {% endif %} 
         
            </div>
          </div>
        </a>

</article>

