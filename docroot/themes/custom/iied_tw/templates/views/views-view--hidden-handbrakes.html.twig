{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title }}
  {{ title_suffix }}

  {{ exposed }}
  
  {% if header %}
    <header class="mb-6">
      {{ header }}
    </header>
  {% endif %}

  {{ attachment_before }}
  <div class="grid grid-flow-row-dense gap-6 mb-12 xl:gap-10 lg:grid-cols-2 xl:grid-cols-4 sm:grid-cols-2">
  {% if rows -%}
    {{ rows }}
  {% elseif empty -%}
    {{ empty }}
  {% endif %}
  </div>
  {{ pager }}

  {{ attachment_after }}
  {{ more }}

  {% if footer %}
    <footer>
      {{ footer }}
    </footer>
  {% endif %}

  {{ feed_icons }}
</div>
