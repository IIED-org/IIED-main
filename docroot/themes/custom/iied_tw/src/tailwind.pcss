  }
  .grid .views-row:nth-child(8n + 4) .color-rotate {
    @apply border-iiedgreen-500;
  }
  .grid .views-row:nth-child(8n + 5) .color-rotate {
    @apply border-iiedgreen-500;
  }
  .grid .views-row:nth-child(8n + 6) .color-rotate {
