  /* Dynamic colour change */
  .bg-transition {
    transition: background-color 2s ease;
  }
  /* Target state once scrolled into view */
  .bg-active {
    background-color: #AAC02C !important;  /* iiedgreen-500 */
  }
  .bg-active figcaption, .bg-active p {
    color: #111827 !important;
  }
  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }
  /* comma after text */
  .item-with-comma::after {
    content: ',';
    padding-right: 0.25rem;
  }
  /* makes sure responsive menu is hidden initially */
  [x-cloak] {
    display: none !important;
  }

  /* sets top margin for info boxes */
