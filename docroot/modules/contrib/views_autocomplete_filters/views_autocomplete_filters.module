<?php

/**
 * @file
 * Extend the Views StringFilter and Combine filters with autocomplete.
 */

declare(strict_types=1);

use Drupal\Core\Hook\Attribute\LegacyHook;
use Drupal\views_autocomplete_filters\Hook\ConfigHooks;
use Drupal\views_autocomplete_filters\Hook\ViewsHooks;

/**
 * Implements hook_config_schema_info_alter().
 *
 * Add config schema for views filters that views_autocomplete_filters modifies.
 */
#[LegacyHook]
function views_autocomplete_filters_config_schema_info_alter(array &$definitions): void {
  \Drupal::service(ConfigHooks::class)->configSchemaInfoAlter($definitions);
}

/**
 * Implements hook_views_plugins_filter_alter().
 */
#[LegacyHook]
function views_autocomplete_filters_views_plugins_filter_alter(array &$definitions): void {
  \Drupal::service(ViewsHooks::class)->viewsPluginsFilterAlter($definitions);
}
